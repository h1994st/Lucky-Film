extends layout

block content
  div.row
    header
      h1= title

    div.well
      form(role='form', method='POST', name='film-submit', action='/submit')
        div.form-group.has-feedback
          label(for='film-name') 电影名
          input(type='text', name='film[name]', class='form-control input-lg', id='film-name', placeholder='电影名', required, autofocus)
        div.form-group.has-feedback
          label(for='film-url') 下载地址
          input(type='url', name='film[url]', class='form-control input-lg', id='film-url', placeholder='下载地址')
        input.btn.btn-success.btn-block.btn-lg(type='submit', value='提交')

    div.panel.panel-success
      div.panel-heading
        h3.panel-title 本周提交电影
      div.panel-body
        if list
          each film in list
            div.media
              a.media-left(href='#')
                img(data-src='holder.js/64x64', alt='64x64', src='data:image/svg+xml;base64,', data-holder-rendered='true', style='width: 64px; height: 64px;')
              div.media-body
                h4.media-heading #{film.name}
                | <a href='#{film.url}'>地址</a>
        else
          | 本周暂时没人提交
  